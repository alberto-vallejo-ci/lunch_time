.col-md-6.col-md-offset-3
  %h3= t('home.searches')

  = form_tag searches_path do
    .form-group
      = label_tag t('home.cost')
      = text_field_tag(:lowest_cost, '1', placeholder: t('home.min_cost'),
                        name: 'search[cost][lowest]')
      = text_field_tag(:highest_cost, '100',  placeholder: t('home.max_cost'),
                       name: 'search[cost][highest]')
    .form-group
      = label_tag t('home.rate')
      = text_field_tag(:lowest_rate, '1', placeholder: t('home.min_rate'),
                       name: 'search[rate][lowest]')
      = text_field_tag(:highest_rate, '5', placeholder: t('home.max_rate'),
                       name: 'search[rate][highest]')
    = submit_tag(t('general.search'))
